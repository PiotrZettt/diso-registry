# Local Development Database URL (when using Docker)
DATABASE_URL="postgresql://defiso_admin:localdev123@localhost:5432/defiso_registry"

# Redis URL (when using Docker)
REDIS_URL="redis://localhost:6379"

# DynamoDB Configuration (alternative to PostgreSQL)
AWS_REGION="eu-west-2"
DYNAMODB_TABLE_PREFIX="defiso"
USE_DYNAMODB="true"

# Authentication
JWT_SECRET="local-development-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"
NEXTAUTH_SECRET="local-development-secret-key-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Blockchain (using testnets for development)
TEZOS_NETWORK="ghostnet"
TEZOS_RPC_URL="https://ghostnet.tezos.marigold.dev"

ETHERLINK_NETWORK="testnet"
ETHERLINK_RPC_URL="https://node.etherlink.com"

# IPFS (using public gateway for development)
IPFS_API_URL="https://ipfs.infura.io:5001"

# Application
APP_NAME="DeFi ISO Registry (Dev)"
APP_URL="http://localhost:3000"
DEFAULT_TENANT_PLAN="basic"

# Email (console logging for development)
