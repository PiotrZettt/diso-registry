# Environment variables for DeFi ISO Registry (DynamoDB Version)
# Copy this to .env.local after setting up your DynamoDB tables

# AWS Configuration
AWS_REGION="eu-west-2"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX="defiso"

# Next.js Configuration
NEXTAUTH_SECRET="your-super-secret-jwt-key-32-chars-min"
NEXTAUTH_URL="http://localhost:3000"

# Tezos Configuration
TEZOS_NETWORK="ghostnet"  # or "mainnet" for production
TEZOS_RPC_URL="https://ghostnet.tezos.marigold.dev"
TEZOS_PRIVATE_KEY=""  # Your deployment private key

# Etherlink Configuration
ETHERLINK_NETWORK="testnet"  # or "mainnet" for production
ETHERLINK_RPC_URL="https://node.etherlink.com"
ETHERLINK_PRIVATE_KEY=""  # Your deployment private key

# IPFS Configuration
IPFS_API_URL="https://ipfs.infura.io:5001"
IPFS_API_KEY=""
IPFS_API_SECRET=""

# Application Configuration
APP_NAME="DeFi ISO Registry"
APP_URL="https://defiso.com"
DEFAULT_TENANT_PLAN="basic"

# Email Configuration (for invitations)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
FROM_EMAIL="noreply@defiso.com"

# Storage Configuration
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-2"
S3_BUCKET_NAME="defiso-uploads"

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"
